@model SportShop.WebUI.ViewModel.MenuViewModel

@foreach (string link in Model.CategoryName)
{
    @Html.RouteLink(link, new
    {
        controller = "Home",
        action = "DisplayItems",
        category = link,
        page = 1,
    }, new
    {
        @class = "btn  btn-default btn-lg " + (link == ViewBag.SelectedCategory ? "btn-primary " : "")
    })
}

@Html.RouteLink("To Cheap", new
    {
        controller = "Home",
        action = "DisplayItems",
        cost = "to-cheap",
        page = 1,

    }, new
    {
        @class = "btn  btn-default btn-lg " + (ViewBag.SelectedCost != null ? "btn-primary " : "")
    })