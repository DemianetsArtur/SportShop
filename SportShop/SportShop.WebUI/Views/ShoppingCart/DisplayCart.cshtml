    var btn = document.getElementsByClassName("remove-neon-btn");
    function myFunction(x) {
        
    if (x.matches) { // If media query matches
        
    } else {
        btn.classList.remove("remove-neon-btn");
        btn.className.replace(/\btn btn-primary\b/g, "");
    }
