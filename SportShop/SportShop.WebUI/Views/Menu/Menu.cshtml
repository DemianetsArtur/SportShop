@model SportShop.WebUI.ViewModel.MenuViewModel


@foreach (var link in Model.CategoryName)
{

    @Html.RouteLink(link, new
{
    controller = "Store",
    action = "Browse",
    category = ViewBag.Category,
    name = link,
    page = 1,

}, new
{
    @class = "btn  btn-default btn-lg " + (link == ViewBag.SelectedCategory ? "btn-primary " : "")
})
}



@Html.RouteLink("To Cheap", new
    {
        controller = "Store",
        action = "Browse",
        category = ViewBag.Category,
        cost = "to-cheap",
        page = 1,

    }, new
    {
        @class = "btn  btn-default btn-lg " + (ViewBag.SelectedCost == "to-cheap" ? "btn-primary " : "")
    })
